# === Runtime & security ===
# SECRET_KEY=your-secret-key
#  defaults to "django-insecure-mo_va&2*lmj8z2ymm5i##wze&u%#d=v1boeki1tc=7@9sn3ilf" when absent. Make sure to change it in production!
DEBUG=True  # defaults to False in production.
# ALLOWED_HOSTS=testownik.solvro.pl,localhost
#  defaults to localhost,127.0.0.1; use commas to provide more hosts.
# CORS_ALLOWED_ORIGINS=http://localhost:3000
#  defaults to http://localhost:3000 to match the local frontend.
# CSRF_TRUSTED_ORIGINS=http://localhost:3000
#  defaults to http://localhost:3000 for CSRF checks.

# === Database ===
# DB_ENGINE=django.db.backends.postgresql
#  defaults to django.db.backends.sqlite3 for development.
# DB_NAME=your_db_name
#  defaults to BASE_DIR/db.sqlite3 if not provided.
# DB_USER=your_db_user
#  defaults to user (only used for non-SQLite engines).
# DB_PASSWORD=your_db_password
#  defaults to password.
# DB_HOST=localhost
#  defaults to localhost.
# DB_PORT=5432
#  defaults to 5432.

# === USOS integration ===
USOS_CONSUMER_KEY=your_usos_key
USOS_CONSUMER_SECRET=your_usos_secret
#  required for every USOS login flow; missing values cause users to receive error=usos_unavailable.

# === Email delivery ===
# EMAIL_HOST=smtp.example.com
#  leave unset to disable SMTP sending and use console backend (defaults to None).
# EMAIL_PORT=587
#  defaults to 587.
# EMAIL_USE_TLS=True
#  defaults to False (enable TLS by setting True).
# EMAIL_HOST_USER=you@example.com
#  defaults to None.
# EMAIL_HOST_PASSWORD=your-email-password
#  defaults to None.
# DEFAULT_FROM_EMAIL="Testownik Solvro <testownik@solvro.pl>"
#  defaults to "Testownik Solvro <testownik@solvro.pl>".

# === Frontend & JWT ===
# FRONTEND_URL=https://testownik.solvro.pl
#  defaults to http://localhost:3000 and is always added to allowed redirect origins.

# JWT_COOKIE_DOMAIN=testownik.solvro.pl
#  defaults to None so cookies stay on the current domain.
JWT_SECRET=your-jwt-secret-key
#  overrides SECRET_KEY for JWT signing; without it the app logs a warning and falls back to SECRET_KEY.